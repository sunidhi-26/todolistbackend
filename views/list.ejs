<%- include("header"); -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% newItemList.forEach(function(item) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkboxItem" value="<%= item._id %>" onChange="this.form.submit()">
                    <p> <%= item.name %> </p>
                </div>
                <input type="hidden" name="hiddenInput" value="<%= listTitle %>">
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="listButton" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer"); -%>
    